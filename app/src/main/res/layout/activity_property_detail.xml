<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.PropertyDetail">

    <ImageView
        android:id="@+id/houseImageView"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:contentDescription="@string/house_image_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/gradientOverlay"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/gradient_bottom_dark"
        app:layout_constraintBottom_toBottomOf="@id/houseImageView"
        app:layout_constraintStart_toStartOf="@id/houseImageView"
        app:layout_constraintEnd_toEndOf="@id/houseImageView" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHP 20,000,000"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/houseNameTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/houseNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modern House"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/locationTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bakakeng North, Baguio City"
        android:textColor="@color/text_white_secondary"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@id/houseImageView"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/close_button_description"
        app:tint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />





    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ratingSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/content_background_color"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/houseImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="5.0"
            android:isIndicator="true"
            android:stepSize="0.1"
            android:theme="@style/RatingBarAccent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ratingTextView"/>

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0 Rating (200)"
            android:textColor="@color/text_secondary_color"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/ratingBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/bookmarkButton"
            android:layout_width="36dp"
            android:layout_height="38dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/bookmark_button_description"
            android:src="@drawable/baseline_bookmark_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:tint="@color/pink" />

        <ImageButton
            android:id="@+id/feedbackButton"
            android:layout_width="36dp"
            android:layout_height="38dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Feedback Button"
            android:src="@drawable/ic_feedback_30"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bookmarkButton"
            android:layout_marginEnd="8dp"
            app:tint="@color/pink" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/content_background_color"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/ratingSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomButtonLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/detailsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODERN HOUSE"
                android:textColor="@color/text_primary_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/detailsForSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOR SALE: MODERN HOUSE"
                android:textColor="@color/text_secondary_color"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/detailsLotArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lot Area: 263 sqm"
                android:textColor="@color/text_secondary_color"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/detailsFloorArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Floor Area: 342 sqm, more or less"
                android:textColor="@color/text_secondary_color"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/detailsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ground Floor:\n• 3-car garage\n• Spacious living with fireplace and dining area\n• Modern kitchen with built-in cabinets and bar counter\n• Cozy front porch\n\nSecond Floor:\n• 3 spacious bedrooms, each with its toilet and bath and balcony\n• Wide front and back balconies for relaxation\n\nLower Ground Floor\n• Guest room"
                android:textColor="@color/text_primary_color"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/seeAllTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textColor="@color/pink_accent_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:layout_gravity="end"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottomButtonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/detail_screen_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chatButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chat Realtor"
            android:background="@drawable/button_background_pink"
            android:textColor="@color/pink_button_text_color"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buy Now"
            android:background="@drawable/button_background_pink"
            android:textColor="@color/pink_button_text_color"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



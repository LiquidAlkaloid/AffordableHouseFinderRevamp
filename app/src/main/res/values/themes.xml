<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AffordableHouseFinderRevamp" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.AffordableHouseFinderRevamp" parent="Base.Theme.AffordableHouseFinderRevamp" />

    <style name="Theme.AffordableHouseFinderRevamp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/upload_screen_background</item>
        <item name="colorPrimary">@color/upload_toolbar_background</item> <item name="colorPrimaryDark">@color/upload_toolbar_background</item> <item name="colorAccent">@color/pink_accent_color</item> </style>

    <style name="FormLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/form_label_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="FormEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_edittext_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:paddingStart">12dp</item> <item name="android:paddingEnd">12dp</item>   <item name="android:paddingTop">10dp</item>    <item name="android:paddingBottom">10dp</item> <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="RatingBarAccent" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/text_secondary_color</item>
        <item name="colorControlActivated">@color/rating_star_color</item>
    </style>
</resources>
